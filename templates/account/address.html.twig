{% extends 'base.html.twig' %}

{% block title %}Mes Adresses - La boutique Marocaine
{% endblock %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-md-10">
				<a class="btn btn-info float-right" href="{{ path('account_address_add') }}">Ajouter une adresse</a>
				<h3>Mes adresses
				</h3>
				<p>Bienvenue dans l'espace de gÃ©stion pour vos adresses de livraison
				</p>
				<a href="{{ path('account') }}">Retour</a>
				<hr>
			</div>
		</div>
		{% if app.user.addresses|length == 0 %}
			<div class="row">
				<div class="col-md-10">
					<p class="text-center">
						<span>Vous n'avez pas encore ajouter d'adresse dans votre espace client !</span><br>
						veuillez suivre le lien pour en ajouter une
						<a href="{{ path('account_address_add') }}">Cliquer ici</a>
					</p>
				</div>
			</div>
		{% else %}
			<div class="row">
				{% for address in app.user.addresses %}
					<div class="col-12 col-md-4 m-2 p-2 ">
						<div class="card" style="width: 18rem;">
							<div class="card-body">
								<h5 class="card-title">{{address.name}}</h5>
								<p class="card-text">{{address.address}},<br>{{address.postal}}-{{address.city}}-{{address.country}}</p>
								<a href="{{ path('account_address_edit', {'id': address.id}) }}">Modifier</a>|<a href="{{ path('account_address_delete', {'id': address.id}) }}">Supprimer</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
		<div class="row" style="height: 200px; "></div>
	</div>
{% endblock %}
