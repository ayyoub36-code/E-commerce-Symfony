{% extends 'base.html.twig' %}

{% block title %}Se connecter - La boutique Marocaine
{% endblock %}

{% block content %}
	<div class="block_small border rounded shadow mt-5 p-3">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			 {% for message in app.flashes('notice') %}
				<div class="alert alert-info">
					{{ message }}
				</div>
    		{% endfor %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal text-center">Merci de vous connecter</h1>
			<b>
				<label class="mx-2" for="inputEmail">Email</label>
			</b>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-2" autocomplete="email" placeholder="Merci de saisir votre email" required autofocus>
			<b>
				<label class="mt-2 mx-2" for="inputPassword">Mot de passe
				</label>
			</b>
			<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Merci de saisir votre mot de passe" required>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
																				        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																				        See https://symfony.com/doc/current/security/remember_me.html
																				
																				        <div class="checkbox mb-3">
																				            <label>
																				                <input type="checkbox" name="_remember_me"> Remember me
																				            </label>
																				        </div>
																				    #}

			<button class="btn btn-block btn-info mt-4" type="submit">
				Se connecter
			</button>
			<hr>
			<p class="text-center"><a href="{{ path('reset_password') }}">Mot de passe oublié </a> ?
			</p>
			<p class="text-center">Ou souhaitez-vous <a href="{{ path('register') }}">Créer un compte</a> ?
			</p>
		</form>
	</div>
	<div class="row" style="height: 100px; "></div>
{% endblock %}
